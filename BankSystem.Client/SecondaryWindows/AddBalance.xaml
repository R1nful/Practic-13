<Window x:Class="BankSystem.Client.SecondaryWindows.AddBalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem.Client.SecondaryWindows"
        mc:Ignorable="d"
        Title="AddBalance" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
            TextWrapping="Wrap" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Введите сумму пополнения" 
            Grid.Column="0"
            Grid.Row="1"/>

        <TextBox x:Name="AddBalanceField"
                 Grid.Column="1"
                Grid.Row="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"
            />
        <Button x:Name="AddBalanceBtn"
                Content="Пополнить баланс"
                Grid.Column="1"
                Grid.Row="2" Click="AddBalanceBtn_Click"/>
    </Grid>
</Window>
